<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    
    <com.oxyexpress.view.parallaxscroll.YPYExpandableListView
        android:id="@+id/list_restaurant"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:childDivider="@color/black_deviders"
        android:divider="@color/black_deviders"
        android:dividerHeight="1sp"
        android:groupIndicator="@null"
        android:scrollbars="none"
        android:visibility="gone" />
    
    <com.oxyexpress.view.parallaxscroll.YPYExpandableListView
        android:id="@+id/list_search_restaurant"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:childDivider="@color/black_deviders"
        android:divider="@color/black_deviders"
        android:dividerHeight="1sp"
        android:visibility="gone"
        android:groupIndicator="@null"
        android:scrollbars="none" />


    <TextView
        android:id="@+id/tv_no_result"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:singleLine="true"
        android:text="@string/info_no_restaurant"
        android:textColor="@color/black_secondary_text"
        android:textSize="16sp"
        android:visibility="gone" />


    <android.support.v4.view.ViewPager
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="false"
        android:layout_marginBottom="338dp"
        android:background="@color/color_bg_primary"
        android:layout_alignParentBottom="true">


    </android.support.v4.view.ViewPager>

    <LinearLayout
        android:id="@+id/layout_indicator"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="5sp"
        android:layout_marginRight="15dp"
        android:layout_marginEnd="15dp"
        android:layout_alignBottom="@+id/img"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginBottom="10dp">
    </LinearLayout>

    <TextView
        android:id="@+id/tv_no_result1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:singleLine="true"
        android:text="@string/info_no_offer"
        android:textColor="@color/black_secondary_text"
        android:textSize="16sp"
        android:visibility="gone" />

    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView7"
        android:layout_below="@+id/layout_indicator"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:paddingLeft="@dimen/small_margin"
        android:paddingRight="@dimen/small_margin"
        android:paddingTop="@dimen/small_margin"
        android:paddingBottom="@dimen/small_margin"
        android:fillViewport="false"
        android:background="@color/color_bg_primary"
        android:text="setTypeface">


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/home"
            android:id="@+id/textView8"
            android:layout_below="@+id/layout_indicator"
            android:layout_alignRight="@+id/layout_indicator"
            android:layout_alignEnd="@+id/layout_indicator"
            android:textColor="@color/white"
            android:typeface="normal"
            android:textSize="15dp"
            android:paddingTop="20dp"
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:paddingBottom="10dp" />
    </ScrollView>


</RelativeLayout>